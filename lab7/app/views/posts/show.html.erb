<h1 class="my-4"><%= @post.title %></h1>
<p><%= @post.content %></p>

<% if @post.image.attached? %>
  <div class="my-3">
    <%= image_tag @post.image, class: "img-fluid" %>  <!-- img-fluid makes the image responsive -->
  </div>
<% end %>

<div class="my-3">
  <% if @post.user == current_user || current_user.admin? %>
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-warning me-2" %>
  <% end %>
  <% if @post.user == current_user || current_user.admin? %>
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <% end %>
  
  <%= link_to 'Back to Posts', posts_path, class: "btn btn-secondary" %>
</div>
